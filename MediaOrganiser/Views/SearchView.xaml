<UserControl x:Class="MediaOrganiser.Views.SearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MediaOrganiser.Views"
             mc:Ignorable="d" Background="White"
             d:DesignHeight="300" d:DesignWidth="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="0" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="1">

            <!-- Menu and text -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBlock Text="Searching: " FontWeight="Bold" />
                <TextBlock x:Name="textSearchType" Text="{Binding Path=_searchTypeName, Mode=OneWay}" />
            </StackPanel>

            <!-- Submission -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <TextBox Width="271" Margin="0,0,10,0"/>
                <ListBox Width="50" Margin="0,0,10,0"/>
                <Button Width="50" Content="Search" Margin="0,0,10,0"/>
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="0,0,10,0"/>
                <Button Content="Save Search" />
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid x:Name="FilesData" CanUserAddRows="False" AutoGenerateColumns="false">
                <DataGrid.Columns>
                    
                    <!-- Picture-->
                    <DataGridTemplateColumn Header="Picture">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Path=picturePath, Mode=OneWay}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <!-- Title-->
                    <DataGridTextColumn Header="Title" Binding="{Binding Path=titleName, Mode=OneWay}"/>
                    <!-- Ext-->
                    <DataGridTextColumn Header="Ext" Binding="{Binding Path=extName, Mode=OneWay}"/>

                    <!-- Edit-->
                    <DataGridTemplateColumn Header="Edit">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Edit" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>

        </StackPanel>
    </Grid>
</UserControl>
